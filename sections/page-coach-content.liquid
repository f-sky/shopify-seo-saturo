{{ 'section-coach-content.css' | asset_url | stylesheet_tag }}

{% for block in section.blocks %}
  {% if block.type == 'section_1' %}
    {% render 'snippet-coach-content-section1', block: block %}
  {% endif %}

  {% if block.type == 'section_2' %}
    {% render 'snippet-coach-content-section2', block: block %}
  {% endif %}

  {% if block.type == 'section_3' %}
    {% render 'snippet-coach-content-section3', block: block %}
  {% endif %}

  {% if block.type == 'section_4' %}
    {% render 'snippet-coach-content-section4', block: block %}
  {% endif %}

  {% if block.type == 'section_5' %}
    {% render 'snippet-coach-content-section5', block: block %}
  {% endif %}

{% endfor %}

<script>
  window.addEventListener('DOMContentLoaded', () => {
  
    function animateToSectionId(sectionId) {
      $('html').animate({
        scrollTop: $(`[data-scroll-section="${sectionId}"]`).offset().top
      }, 700);
    }
  
    $('[data-scroll-id]').on('click', function() {
      const sectionId = $(this).attr('data-scroll-id');
      animateToSectionId(sectionId);
    });
  
    $('[data-scroll-select]').on('change', function() {
      animateToSectionId( $(this).val() );
    });
  
  });
</script>

