{{ 'product-nutri-ingre.css' | asset_url | stylesheet_tag }}

<section class="page-width nutri-ingre__wrapper">
    <div class="nutri-ingre__content">
        <h3 class="nutri-ingre__content-title h2-headline">
            {{ section.settings.title }}<br>
            <strong>{{ section.settings.subtitle }}</strong>
        </h3>

        {% for block in section.blocks %}
          <div class="nutri-ingre__content-row">
              <h4 class="h2-headline">{{ block.settings.title }}</h4>

              {% assign image = block.settings.image %}
              {% if image != blank %}
                <img class="nutri-ingre__content--nutri" src="{{ image | img_url: 'medium'}}" alt="{{ image.alt }}" loading="lazy" />
              {% endif %}
              <p class="p">{{ block.settings.desc }}</p>
          </div>
        {% endfor %}
    </div>

    {% assign image = section.settings.image %}
    {% if image != blank %}
      <img src="{{ image | img_url: '1800x'}}" alt="{{ image.alt }}" class="nutri-ingre__image" loading="lazy" />
    {% endif %}
</section>

